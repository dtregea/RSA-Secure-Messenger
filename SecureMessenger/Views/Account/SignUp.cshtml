@model SecureMessenger.Models.User

<h2>Sign Up</h2>

<form asp-action="SignUp" method="post" id="signUpForm">
    <div class="form-group">
        <label asp-for="Username" class="control-label"></label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Sign Up" class="btn btn-primary" />
    </div>
    <div id="spinnerBlock" style="display:none;">
        <p>Generating keys, please wait...</p>
        <div class="spinner-border text-primary" role="status">
            <span class="sr-only"></span>
        </div>
    </div>

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        document.getElementById("signUpForm").addEventListener("submit", function () {
            document.getElementById("spinnerBlock").style.display = "block";
        });
    </script>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}
